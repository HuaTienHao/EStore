@model EStore.Models.Category
@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Add a new category</h3>
            <form asp-action="AddCategory" method="post" >
                <div class="form-group">
                    <label asp-for="CategoryName">Name *</label>
                    <input type="text" class="form-control" asp-for="CategoryName" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <div class="form-group pt-3">
                    <button class="btn btn-dark"><i class="bi bi-save"></i> Save</button>
                    <a href="/Dashboard/CategoryGetAll" class="btn btn-primary"> <i class="bi bi-list"></i>List</a>
                </div>

            </form>
        </div>
    </div>
</div>

