@model EStore.Models.Product
@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Update Product</h3>
            <form asp-action="UpdateProduct" method="post" enctype="multipart/form-data">
                <input type="hidden" class="form-control" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="ProductName">Name -</label>
                    <input type="text" class="form-control" asp-for="ProductName" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price">Price *</label>
                    <input type="text" class="form-control" asp-for="Price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image">Image *</label>
                    <input type="file" class="form-control" asp-for="ImageFile" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId">Genre *</label>
                    <select asp-for="CategoryId" asp-items="Model.CategoryList" class="form-control">
                        <option value="">--select--</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StoreName">Store -</label>
                    <input type="text" class="form-control" asp-for="StoreName" />
                    <span asp-validation-for="StoreName" class="text-danger"></span>
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark"><i class="bi bi-save"></i> Save</button>
                    <a href="/Dashboard/ProductGetAll" class="btn btn-primary"> <i class="bi bi-list"></i>List</a>
                </div>

            </form>
        </div>
    </div>
</div>

