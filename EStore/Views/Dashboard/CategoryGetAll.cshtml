@model IEnumerable<EStore.Models.Category>
@{
}

<div class="container pt-5">
    

    <div class="row">
        <div class="col-md-6">
            <h3>List of category</h3>
            <!-- Thêm thanh tìm kiếm -->
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Search" id="searchInput">
                <button class="btn btn-outline-secondary" type="button" onclick="searchCategories()">Search</button>
                <a href="/Dashboard/CategoryGetAll" class="btn btn-dark"><i class="bi bi-arrow-counterclockwise"></i></a>

            </div>
            <table  class="table table-stripped table-bordered table-dark">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model){
                    <tr>
                            <td>@item.CategoryName</td>
                        <td>
                                <a class="btn btn-success" href="/Dashboard/UpdateCategory?id=@item.Id"><i class="bi bi-pen"></i> Edit</a> |
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Dashboard/Delete?id=@item.Id"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" href="/Dashboard/AddCategory">Add more</a>
        </div>
    </div>
</div>
<script>
    function searchCategories() {
        var searchTerm = document.getElementById("searchInput").value.toLowerCase();
        window.location.href = "/Dashboard/CategoryGetAll?searchTerm=" + searchTerm;
    }
</script>
